/* 分页 */
#demo1 {
	margin: 30px auto;
	width: 600px;
	height: 50px;
}
.t_right h3 {
    margin-top: 40px;
}
/* 表格部分 */
.t_right .table-responsive {
    margin-top: 20px;
}
.t_right .table-responsive th,
.t_right .table-responsive td {
    text-align: center;
    border: none;
}
.t_right .table-responsive th {
    font-size: 18px;
    background-color: #f5f5f5;
    font-weight: 400;
}
/* 遮罩层 */
.mask {
    /* visibility: hidden; */
    display: none;
}
.layui-form-item .title {
    margin-left: 14px;
    font-size: 20px;
    font-weight: 700;
    color:#636363;
}
.layui-form-item .layui-form-label {
    width: 114px;
    text-align: left;
}
.layui-form-item .l .layui-input {
    width: 300px;
    border: none;
    border-radius: 4px;
    background-color: #f1f1f1;
    vertical-align: middle;
    display: inline-block;
}
.layui-form-item .l .layui-select-title .layui-input {
    background-color: #fff;
    width: 190px;
    border: 1px solid #ccc;
    border-radius: 0;
}
.layui-form-item .layui-input-block .layui-input {
    width: 300px;
    border: none;
    border-radius: 4px;
    background-color: #f1f1f1;
    vertical-align: middle;
    display: inline-block;
}
.layui-form-item button {
    margin-top: 30px;
    margin-left: 200px;
    width: 200px;
    height: 40px;
    line-height: 40px;
    text-align: center;
    font-size: 20px;
}
/* 附件上传 */
.layui-form-item .layui-btn-danger {
    margin: 0;
    width: 120px;
    background-color: #f1f1f1;
    color: #646464;
}
/* 富文本编辑器 */
#editor {
    margin-top: -15px;
    margin-bottom: 20px;
    position: relative;
    z-index: -1;
}