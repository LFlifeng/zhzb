/* 顶部 */
.top {
    height: 80px;
    background-color: #fff;
}
/* logo */
.top .logo img{
    height: 50px;
    margin: 20px -10px;
}
/* <!-- 导航部分 --> */
.top .nav {
    margin-left: 40px;
}
.top .nav li {
    /* width: 80px; */
    height: 80px;
    margin: 0 10px;
}
.top .nav li a {
    display: block;
    width: 100px;
    height: 80px;
    line-height: 80px;
    text-align: center;
    text-decoration-line: none;
    color: #646464;
    cursor: pointer;
}
.top .nav li:first-child a {
    letter-spacing: 10px;
    border-bottom: 4px solid #0090ec;
}
.top .nav li a:hover {
    border-bottom: 4px solid #0090ec;
}
/* <!-- 个人中心部分 --> */
.top .personal .detail {
    width: 300px;
    margin-top: 10px;
    display: flex;
    align-items: center;
    position: relative;
}
.top .personal .detail div {
    margin-right: 25px;
    margin-top: 20px;
    cursor: pointer;
}
.top .personal .detail div:nth-child(3) img {
    width: 50px;
    height: 50px;
    border-radius: 50%;
    margin-top: -20px;
}
.top .personal .detail div:nth-child(3) i {
    font-size: 20px;
}
.top .personal .detail div:nth-child(1),
.top .personal .detail div:nth-child(2) {
    position: relative;
}
.top .personal .detail div:nth-child(1)::after,
.top .personal .detail div:nth-child(2)::after {
    display: block;
    width: 16px;
    height: 16px;
    line-height: 16px;
    text-align: center;
    border-radius: 50%;
    background-color: #ddaa3e;
    content: '1';
    color: #fff;
    position: absolute;
    right: -8px;
    top: -8px;
} 
/* 下拉菜单部分 */
.detail .ul {
    display: none;
    position: absolute;
    bottom: -92px;
    right: 48px;
    width: 158px;
    background-color: #fff;
    z-index: 60;
}
.detail .ul a {
    display: block;
    width: 100%;
    height: 30px;
    line-height: 30px;
    text-align: center;
}
/* 主体部分 */
.main {
    background-color: #f7f7f7;
}
.middle {
    padding-top: 20px;
}
/* 左侧 */
.middle .left {
    width: 200px;
    background-color: #fff;
}
.middle h4 a {
    display: block;
    margin-top: 5px;
    height: 30px;
    line-height: 30px;
    text-align: center;
    font-weight: 400;
    font-size: 18px;
    color: #0090ec;
}
/* 手风琴效果 */
.parentWrap {
    width: 200px;
    text-align: center;
  }
  .menuGroup {
      margin-top: 10px;
  }
  .groupTitle a {
    display: block;
    height: 40px;
    line-height: 40px;
    font-size: 16px;
    cursor: pointer;
  }
  .menuGroup>div {
    height: 40px;
    line-height: 40px;
    font-size: 14px;
    background-color: #fafafa;
    display: none;
    cursor: pointer;
  }
  .menuGroup div:nth-child(2),.menuGroup>div:nth-child(3) {
      margin-bottom: 4px;
  }
/* 右侧 */
.middle .right {
    width: 980px;
    background-color: #fff;
    margin-bottom: 20px;
}
.middle .right .t_right {
    width: 920px;
    margin: 0 auto;
    background-color: #fff;
}