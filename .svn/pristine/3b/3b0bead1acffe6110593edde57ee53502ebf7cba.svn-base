.top .nav li:first-child a {
    border:none;
}
.top .nav li:nth-child(3) a {
    border-bottom: 4px solid #0090ec;
}
.t_right {
    /* height: 750px; */
}
.t_right h3 {
    margin-top: 40px;
    font-size: 18px;
    font-weight: 700;
}
/* 表格部分 */
.t_right .table-responsive {
    margin-top: 20px;
}
.t_right .table-responsive th,
.t_right .table-responsive td {
    text-align: center;
    border: none;
}
.t_right .table-responsive td p {
    width: 400px;
    line-height: 30px;
}
.t_right .table-responsive th {
    font-size: 14px;
    background-color: #f5f5f5;
    font-weight: 400;
}
.t_right .table-responsive tr td:not(.word) {
    height: 120px;
    line-height: 120px;
}
.t_right .table-responsive tr td:nth-child(4) i,
.t_right .table-responsive tr td:nth-child(5) i {
    font-size: 50px;
    color: #ccc;
    font-weight: 400;
}
.t_right .table-responsive tr td:nth-child(6) i,
.t_right .table-responsive tr td:nth-child(7) i {
    font-size: 50px;
    color: #0090ed;
    font-weight: 400;
}