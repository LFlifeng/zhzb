/* 顶部 */
.top {
    height: 80px;
    background-color: #fff;
}
/* logo */
.top .logo img{
    height: 50px;
    margin: 20px -10px;
}
/* <!-- 导航部分 --> */
.top .nav {
    margin-left: 40px;
}
.top .nav li {
    /* width: 80px; */
    height: 80px;
    margin: 0 10px;
}
.top .nav li:first-child {
}
.top .nav li a {
    display: block;
    width: 100px;
    height: 80px;
    line-height: 80px;
    text-align: center;
    color: #cfcfcf;
    cursor: pointer;
}
.top .nav li:first-child a {
    letter-spacing: 10px;
    border-bottom: 4px solid #0090ec;
}
.top .nav li a:hover {
    border-bottom: 4px solid #0090ec;
}
/* <!-- 个人中心部分 --> */
.top .personal .detail {
    width: 300px;
    margin-top: 10px;
}
.top .personal .detail div {
    margin-right: 25px;
    margin-top: 20px;
    cursor: pointer;
}
.top .personal .detail div:nth-child(3) img {
    width: 50px;
    height: 50px;
    border-radius: 50%;
    margin-top: -20px;
}
.top .personal .detail div:nth-child(1),
.top .personal .detail div:nth-child(2) {
    position: relative;
}
.top .personal .detail div:nth-child(1)::after,
.top .personal .detail div:nth-child(2)::after {
    display: block;
    width: 16px;
    height: 16px;
    line-height: 16px;
    text-align: center;
    border-radius: 50%;
    background-color: #ddaa3e;
    content: '1';
    color: #fff;
    position: absolute;
    right: -8px;
    top: -8px;
} 
/* 主体部分 */
.main {
    background-color: #f7f7f7;
}
.middle {
    padding-top: 20px;
}
/* 左侧 */
.middle .left {
    width: 200px;
    height: 400px;
    background-color: #fff;
}
.middle h4 {
    margin-top: 5px;
    height: 30px;
    line-height: 30px;
    text-align: center;
    font-weight: 700;
    color: #777;
}
/* 右侧 */
.middle .right {
    width: 980px;
    background-color: #fff;
    margin-bottom: 20px;
}
.middle .right .t_right {
    width: 920px;
    margin: 0 auto;
    background-color: #fff;
}
.t_right .t_top {
    margin-top: 40px;
}
.t_right .t_top h3 {
    font-size: 18px;
    color: #646464;
}
.t_right .t_top div {
    margin-left: 10px;
    margin-top: 20px;
    color: #b1abaa;
}
.t_right .t_top button {
    background-color: #0090ec;
    border: none;
    width: 100px;
    height: 35px;
    line-height: 35px;
    text-align: center;
    color: #fff;
    border-radius: 5px;
}
.t_right .table-responsive {
    margin-top: 20px;
}