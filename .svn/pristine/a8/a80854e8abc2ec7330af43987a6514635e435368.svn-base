
/* banner */
.banner img {
    width: 100%;
}
.banner .w {
    margin-top: -450px;
    margin-bottom: 200px;
}
.banner .b_title {
    text-align: center;
}
.banner .b_title p {
    color: #fff;
}
.banner .b_title p:first-child {
    font-weight: 700;
    font-size: 60px;
}
.banner .b_title p:nth-child(2) {
    font-size: 24px;
}
.banner .b_title p:nth-child(3) {
    margin-top: 100px;
    font-size: 30px;
    font-weight: 700;
}
.banner .b_title p:nth-child(3) span {
    margin-left: 20px;
    display: inline-block;
    height: 40px;
    padding: 0 30px;
    border-radius: 20px;
    background-color: #fff;
    color: #7748f3;
    font-size: 28px;
}
.banner .b_title p:nth-child(3) span i {
    color: #7748f3;
    margin-right: 10px;
}
/* 产品核心优势 */
.advantage {
    background: url(../img/1.1.jpg) no-repeat;
    border: 1px #fff solid;
}
.w {
    margin-top: 30px;
}
.w>h3 {
    margin-left: 540px;
    font-size: 28px;
    color: #30312e;
}
.w hr{
    width: 50px;
    height: 4px;
    border: none;
    text-align: center;
    background-color: #30312e;
    margin-left: 570px;
    margin-top: 20px;
    border-radius: 2px;
}
.advantage_content {
    margin-top: 20px;
    margin-bottom: 400px;
}
.advantage_content .t_advantage_content>div {
    margin-right: 60px;
    position: relative;
}
.advantage_content .t_advantage_content>div>span {
    position: absolute;
    bottom: 0;
    display: block;
    width: 100%;
    height: 80px;
    line-height: 80px;
    font-size: 26px;
    font-weight: 700;
    color: #fff;
    text-align: center;
    background-color: #30312e;
    opacity: .8;
}
.advantage_content .t_advantage_content>div:last-child {
    margin: 0;
}
.advantage_content .t_advantage_content:last-child {
    margin-top: 60px;
}
/* 权威认证 */
.major {
    width: 100%;
    border: 1px #fff solid;
    background: url(../img/2.2.jpg) no-repeat;
}
.major .w>h3 {
    color: #fff;
}
.major .w>hr {
    background-color: #fff;
}
.major .a_content {
    margin-top: 20px;
    margin-bottom: 0px;
}
.major .a_content .t_advantage_content>div {
    margin-right: 112px;
    margin-left: 108px;
    text-align: center;
}
.major .a_content .t_advantage_content>div>span {
    display: block;
    width: 180px;
    height: 80px;
    line-height: 80px;
    font-size: 26px;
    font-weight: 700;
    color: #fff;
    text-align: center;
    margin: 20px 0;
    opacity: .8;
}
.major .a_content .t_advantage_content>div:last-child {
    margin-right: 0;
}
.major .a_content .t_advantage_content:last-child {
    margin-top: 60px;
}
/* 合作分布 */
.ad_content {
    text-align: center;
    position: relative;
}
.ad_content .fa-star {
    color: red;
    font-size: 20px;
    position: absolute;
    top: 264px;
    right: 393px;
}
.ad_content .dian {
    display: block;
    width: 15px;
    height: 15px;
    border-radius: 50px;
    background-color: #7748f3;
    position: absolute;
}
.ad_content .dian::after,.ad_content .dian::before {
    content: '';
    display: block;
    width: 100%;
    height: 100%;
    border-radius: 50px;
    background-color: #7748f3;
    position: absolute;
}
.ad_content .dian:nth-child(3) {
    top: 150px;
    right: 300px;
}