.top .nav li:first-child a {
    border:none;
}
.top .nav li:nth-child(4) a {
    border-bottom: 4px solid #0090ec;
}
.t_right {
    height: 750px;
}
.t_right h3 {
    margin-top: 40px;
    font-size: 18px;
    font-weight: 700;
}
/* 表格部分 */
.t_right .table-responsive {
    margin-top: 20px;
}
.t_right .table-responsive th,
.t_right .table-responsive td {
    line-height: 25px;
    text-align: center;
    border: none;
}
.t_right .table-responsive td:nth-child(3) div {
    padding-left:140px; 
}
.t_right .table-responsive td:nth-child(3) p {
    margin-right: 40px;
}
.t_right .table-responsive td:last-child p:first-child {
    color: #fff;
    background-color: #0091ee;
    cursor: pointer;
    width: 100px;
    height: 30px;
    line-height: 30px;
    text-align: center;
    border-radius: 4px;
}
.t_right .table-responsive th {
    font-size: 14px;
    background-color: #f5f5f5;
    font-weight: 400;
}
.t_right .table-responsive i {
    color: #fff;
}