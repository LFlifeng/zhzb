.top {
	width: 100%;
	height: 38px;
	line-height: 38px;
	color: #323232;
	border-bottom: 1px solid #e2e2e2;
	background: #f0f0f0;
}
.top_content {
	width: 1200px;
	margin: 0 auto;
}
.oBtn_link {
	color: #008fed;
}
/* 地图导航  */
html {
	-moz-box-sizing: border-box;
	box-sizing: border-box;
}
.top_nav {
	width: 500px;
	margin: 0 auto;
	background: #1e8449;
	color: #f0f0f0;
}
.top_nav a {
	display: block;
	padding: 0 16px;
	line-height: inherit;
	cursor: pointer;
}
.top_nav_menu {
	line-height: 45px;
	font-weight: 700;
	text-transform: uppercase;
}
.top_nav_menu-item {
	display: inline-block;
	position: relative;
}
.top_nav_menu-item:hover {
	background-color: #9b59b6;
}
.top_nav_menu-item:hover .nav_submenu {
	display: block;
}
.top_nav_submenu {
	font-weight: 300;
	text-transform: none;
	position: absolute;
	display: none;
	width: 213px;
	height: 180px;
	background: #FFFFFF;
	border: 1px solid #e2e2e2;
	border-top: none;
	color: #323232;
	z-index: 999;
	box-shadow: 0px 2px 5px #eeeeee;
}
.top_nav_submenu-item:hover {
	background: rgba(0, 0, 0, 0.1);
}
.web_map {
	line-height: inherit;
	cursor: pointer;
}
.web_map a {
	display: inline-block;
	width: 60px;
	height: 38px;
	text-align: center;
}
.map_select {
	display: inline-block;
	width: 60px;
	height: 38px;
	background: #FFFFFF;
}
/* 结束*/

/*logo*/
.logo {
	width: 1200px;
	height: 120px;
	margin: 0 auto;
	align-items: center;
}
.logo_icon {
	width: 300px;
	height: 80px;
	margin-right: 80px;
	margin-top: 15px;
}
.search_box {
	margin-top: 30px;
	border: 2px solid #c8302e;
}
.search_box #search_box {
	display: inline-block;
	margin-left: 10px;
}
.search_box #search_box div {
	display: inline-block;
	width: 0px;
	height: 0px;
	border-top: 6px solid #e2e2e2;
	border-right: 6px solid transparent;
	border-left: 6px solid transparent;
}
.search_box #search_box select {
	height: 40px;
	width: 70px;
	line-height: 40px;
	-webkit-appearance:none;
	-moz-appearance:none;
	appearance:none; /*默认除去下拉箭头*/
	border: none;
	color: #ccc;
	outline: none;
}
.search_box #search_box select
.search_box #search_box select option {
	text-align: center;
}
.search_box #search_box select::-ms-expand { display: none; }/*兼容ie*/
.search_box .search-border {
	height: 44px;
	line-height: 44px;
	border: none;
	border-left: 1px solid #e2e2e2; 
	width: 300px;
	padding-left: 5px;
}
.search_box .search_btn {
	background: #c8302e;
	color: #ffffff;
	font-size: 14px;
	height: 44px;
	line-height: 44px;
	border: none;
	padding: 2px 40px;
}
