    <script>
        $(function () {
            // 城市显示
            // 鼠标进入时
            $('.layui-input-block dl dd:eq(4)>a').mouseenter(function () {
                $('.layui-input-block dl dd>.city').show();
                $(this).css({
                    "border": "1px solid #ccc",
                    "border-right": "none"
                });
                $('.layui-input-block dl dd>.city>div:eq(2)').css({
                    "border-left": "none"
                });
            });
            $('.layui-input-block dl dd>.city').mouseenter(function () {
                $('.layui-input-block dl dd>.city').show();
                $(this).siblings('a').css({
                    "border": "1px solid #ccc",
                    "border-right": "none"
                });
                $('.layui-input-block dl dd>.city>div:eq(2)').css({
                    "border-left": "none"
                });
            });
            // 鼠标离开时
            $('.layui-input-block dl dd:eq(4)>a').mouseleave(function () {
                $('.layui-input-block dl dd>.city').hide();
                $(this).css({
                    "border": "none"
                });
            });
            $('.layui-input-block dl dd>.city').mouseleave(function () {
                $('.layui-input-block dl dd>.city').hide();
                $(this).siblings('a').css({
                    "border": "none"
                });
            });
        });
    </script>
