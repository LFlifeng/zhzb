/* banner */
.banner {
    position: relative;
}
.banner div:first-child img {
    width: 100%;
}
.banner a:last-child {
    display: block;
    position: absolute;
    bottom: 50px;
    left: 44.5%;
    cursor: pointer;
}
.advantage .w {
    margin-top: 50px;
}
.w>h3 span {
    display: block;
    font-size: 28px;
    color: #767170;
    font-weight: 700;
    text-align: center;
    margin-left: calc(50% - 51%);
}
hr{
    width: 78px;
    height: 4px;
    border: none;
    text-align: center;
    background-color: #d7363e;
    margin-left: 554px;
    margin-top: 20px;
    border-radius: 2px;
}
/* 优势服务 */
.advantage_content p {
    margin-top: 30px;
    color: #767170;
    font-size: 18px;
    line-height: 30px;
}
/* 三大功能 */
.advantage .under {
    margin-top: 170px;
}
.advantage .under img {
    width: 100%;
}
.advantage .info_num {
    margin-top: 100px;
    position: absolute;
}
.advantage .info_num>div {
    width: 340px;
    height: 240px;
    background-color: #d03e44;
    margin-right: 60px;
    position: relative;
}
.advantage .info_num>div p {
    margin: 100px 10px 0;
    font-size: 16px;
    font-weight: 700;
    color: #e5bdb9;
    line-height: 30px;
}
.advantage .info_num>div .num {
    position: absolute;
    left: 124px;
    top: -70px;
    width: 100px;
    height: 100px;
    line-height: 100px;
    text-align: center;
    border: 4px solid #fff;
    border-radius: 50%;
    color: #fff;
    background-color: #e96f31;
    font-size: 40px;
    font-weight: 700;
}
/* 海量数据 */
.advantage .info_img_num {
    margin: 80px 0;
}
.advantage .info_img_num>div {
    position: relative;
    margin-right: 10px;
}
.advantage .info_img_num>div>img {
    width: 224px;
}
.advantage .info_img_num>div .img_num {
    position: absolute;
    left: 60px;
    bottom: 50px;
    text-align: center;
}
.advantage .info_img_num>div .img_num p {
    color: #fff;
    font-size: 24px;
    font-weight: 700;
    margin-bottom: 10px;
    width: 104px;
    overflow: hidden;
	text-overflow:ellipsis;
    white-space: nowrap;
}
.advantage .info_img_num>div .img_num span {
    color: #fff;
    font-size: 18px;
}