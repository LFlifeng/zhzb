/* 头部导航 */

.head_nav {
	width: 100%;
}
.nav {
	width: 1200px;
	margin: 0 auto;
	position: relative;
}
.nav ul {
    margin-left: 100px;
}
.nav ul li {
	width: 150px;
	height: 50px;
	display: inline-block;
	line-height: 50px;
	font-size: 14px;
	color: #ffffff;
	text-align: center;
	float: left;
}
.nav ul li a {
	color: #505050;
	width: 150px;
	height: 80px;
	line-height: 80px;
	font-size: 20px;
	display: block;
}


/* banner */
.banner img {
    width: 100%;
}
.banner .w {
    margin-top: -450px;
    margin-bottom: 200px;
}
.banner .b_title {
    text-align: center;
}
.banner .b_title p {
    color: #fff;
}
.banner .b_title p:first-child {
    font-weight: 700;
    font-size: 60px;
}
.banner .b_title p:nth-child(2) {
    font-size: 24px;
}
.banner .b_title p:nth-child(3) {
    margin-top: 100px;
    font-size: 30px;
    font-weight: 700;
}
.banner .b_title p:nth-child(3) span {
    margin-left: 20px;
    display: inline-block;
    height: 40px;
    padding: 0 30px;
    border-radius: 20px;
    background-color: #fff;
    color:#341b6a;
    font-size: 28px;
}
.banner .b_title p:nth-child(3) span i {
    color: #341b6a;
    margin-right: 10px;
}
/* 六大优势 */
.advantage {
    background: url(../img/1.1.jpg) no-repeat;
    border: 1px #fff solid;
}
.w {
    margin-top: 30px;
}
.w>h3 {
    margin-left: 540px;
    font-size: 28px;
    color: #30312e;
}
.w hr{
    width: 50px;
    height: 4px;
    border: none;
    text-align: center;
    background-color: #30312e;
    margin-left: 570px;
    margin-top: 20px;
    border-radius: 2px;
}
.advantage_content {
    margin-top: 20px;
    margin-bottom: 400px;
}
.advantage_content .t_advantage_content>div {
    margin-right: 60px;
    position: relative;
    width: 360px;
    height: 236px;
    overflow: hidden;
}
.advantage_content .t_advantage_content>div img {
    transition: all 1s;
}
.advantage_content .t_advantage_content>div img:hover {
    transform: scale(1.2);
}
.advantage_content .t_advantage_content>div>span {
    position: absolute;
    bottom: 0;
    display: block;
    width: 100%;
    height: 80px;
    line-height: 80px;
    font-size: 26px;
    font-weight: 700;
    color: #fff;
    text-align: center;
}
.advantage_content .t_advantage_content>div:last-child {
    margin: 0;
}
.advantage_content .t_advantage_content:last-child {
    margin-top: 60px;
}
/* 权威认证 */
.major {
    width: 100%;
    border: 1px #fff solid;
    background: url(../img/2.2.jpg) no-repeat;
}
.major .w>h3 {
    color: #fff;
}
.major .w>hr {
    background-color: #fff;
}
.major .a_content {
    margin-top: 20px;
    margin-bottom: 0px;
}
.major .a_content .t_advantage_content>div {
    margin-right: 112px;
    margin-left: 108px;
    text-align: center;
}
.major .a_content .t_advantage_content>div>span {
    display: block;
    width: 180px;
    height: 80px;
    line-height: 80px;
    font-size: 26px;
    font-weight: 700;
    color: #fff;
    text-align: center;
    margin: 20px 0;
    opacity: .8;
}
.major .a_content .t_advantage_content>div:last-child {
    margin-right: 0;
}
.major .a_content .t_advantage_content:last-child {
    margin-top: 60px;
}
/* 合作分布 */
.ad_content {
    text-align: center;
    position: relative;
}
.ad_content .fa-star {
    color: red;
    font-size: 20px;
    position: absolute;
    top: 310px;
    right: 424px;
    z-index: 1000000;
}